# ============================================
# GAMMA CLONE - ENVIRONMENT VARIABLES
# ============================================

# ============================================
# REQUIRED - Must be set for app to work
# ============================================

# OpenAI API Key (REQUIRED for AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# Database Connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gamma_clone

# Secret Key for JWT tokens (change this!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-to-random-string

# ============================================
# OPTIONAL - Additional Services
# ============================================

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# MongoDB (for analytics)
MONGODB_URL=mongodb://localhost:27017

# Anthropic Claude (optional alternative AI)
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# Stability AI (optional for Stable Diffusion)
# STABILITY_API_KEY=sk-your-key-here

# ============================================
# FILE STORAGE
# ============================================

# Use local storage (true) or AWS S3 (false)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./storage

# AWS S3 Configuration (if USE_LOCAL_STORAGE=false)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_S3_BUCKET=gamma-clone-storage
# AWS_REGION=us-east-1

# ============================================
# EMAIL CONFIGURATION
# ============================================

# SMTP Configuration (for password reset, notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAILS_FROM_EMAIL=noreply@gamma-clone.com
# EMAILS_FROM_NAME=Gamma Clone

# ============================================
# PAYMENT PROCESSING (STRIPE)
# ============================================

# Stripe Configuration
# Get from: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_your-key-here
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs for plans
# STRIPE_PRICE_ID_PLUS=price_your-plus-id
# STRIPE_PRICE_ID_PRO=price_your-pro-id
# STRIPE_PRICE_ID_ULTRA=price_your-ultra-id

# ============================================
# APPLICATION SETTINGS
# ============================================

# Environment
DEBUG=True

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# API Settings
API_V1_STR=/api/v1

# ============================================
# AI MODEL CONFIGURATION
# ============================================

# Default AI models to use
DEFAULT_TEXT_MODEL=gpt-4-turbo-preview
DEFAULT_IMAGE_MODEL=dall-e-3

# ============================================
# CREDITS CONFIGURATION
# ============================================

# Credits per plan
CREDITS_FREE_PLAN=400
CREDITS_PLUS_PLAN=1000
CREDITS_PRO_PLAN=4000
CREDITS_ULTRA_PLAN=20000

# Credit costs per action
CREDIT_COST_FULL_GENERATION=10
CREDIT_COST_REWRITE=1
CREDIT_COST_TRANSLATE=2
CREDIT_COST_IMAGE=5
CREDIT_COST_DIAGRAM=3

# ============================================
# RATE LIMITING
# ============================================

# Requests per minute
RATE_LIMIT_PER_MINUTE=60

# AI requests per hour
RATE_LIMIT_AI_PER_HOUR=100

# ============================================
# MONITORING & LOGGING
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Sentry DSN (optional for error tracking)
# SENTRY_DSN=your-sentry-dsn

# ============================================
# CELERY CONFIGURATION
# ============================================

# Celery broker (use Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================

# WebSocket settings
WS_MESSAGE_QUEUE_SIZE=100
WS_HEARTBEAT_INTERVAL=30

# ============================================
# FILE UPLOAD LIMITS
# ============================================

# Max file size (10MB)
MAX_UPLOAD_SIZE=10485760

# ============================================
# SECURITY
# ============================================

# JWT token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# JWT algorithm
ALGORITHM=HS256

# ============================================
# CORS ORIGINS
# ============================================

# Comma-separated list of allowed origins
# BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
